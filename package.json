{
  "name": "amplify-client",
  "version": "1.0.3",
  "description": "Desktop client for Amplify - University of Montana's generative AI platform",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "chat",
    "umontana"
  ],
  "author": "University of Montana",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.umontana.amplify",
    "productName": "Amplify",
    "publish": {
      "provider": "github",
      "owner": "umzcio",
      "repo": "amplify-desktop-client"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "background": "build/dmg-background/background.png",
      "window": {
        "width": 640,
        "height": 400
      },
      "contents": [
        {
          "x": 200,
          "y": 200,
          "type": "file"
        },
        {
          "x": 440,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
